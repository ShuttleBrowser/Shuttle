{
  "name": "shuttle",
  "version": "2.0.0",
  "description": "The fastest access to your favorite applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dmg-mac": "electron-installer-dmg ./release-builds/Shuttle-darwin-x64/Shuttle.app Shuttle --overwrite --out=release-builds",
    "package-mac": "electron-packager . Shuttle --overwrite --platform=darwin --arch=x64 --icon=assets/img/logo.icns --out=release-builds",
    "package-win": "electron-packager . Shuttle --overwrite --platform=win32 --arch=x64 --icon=assets/img/icon.ico --out=release-builds --version-string.CompanyName=Shuttle_ltd --version-string.ProductName=2.0.0 --version-string.FileDescription=Shuttle",
    "package-linux": "electron-packager . Shuttle --overwrite --platform=linux --arch=x64 --icon=assets/img/icon.png --out=release-builds",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShuttleLtd/Shuttle.git"
  },
  "keywords": [
    "js",
    "javascript",
    "electron"
  ],
  "author": "Shuttle Ltd",
  "license": "NPOSL-3.0",
  "bugs": {
    "url": "https://github.com/ShuttleLtd/Shuttle/issues"
  },
  "homepage": "https://getshuttle.xyz/",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "favicon-getter": "^1.1.3",
    "lowdb": "^1.0.0",
    "menubar": "^5.2.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-builder": "^19.55.3",
    "electron-packager": "^10.1.2",
    "standard": "^10.0.3"
  },
  "build": {
    "appId": "xyz.shuttleltd.shuttle",
    "asar": "true",
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "icon": "assets/img/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/img/icon.icns"
    }
  }
}
