{
  "name": "shuttle",
  "version": "2.1.0",
  "description": "The fastest access to your favorite applications",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "lint": "standard",
    "dist": "build -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robjullian/shuttle.git"
  },
  "keywords": [
    "js",
    "javascript",
    "electron"
  ],
  "author": "Robin Jullian <robin.jullian@getshuttle.xyz>",
  "license": "NPOSL-3.0",
  "bugs": {
    "url": "https://github.com/robjullian/shuttle/issues"
  },
  "homepage": "https://getshuttle.xyz/",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-localshortcut": "^3.1.0",
    "electron-updater": "^2.20.1",
    "is-promise": "^2.1.0",
    "lowdb": "^1.0.0",
    "menubar": "^5.2.3",
    "os-locale": "^3.0.1",
    "request": "^2.87.0",
    "socket.io-client": "^2.1.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "electron-builder": "^20.17.0",
    "electron-packager": "^10.1.2",
    "standard": "^10.0.3"
  },
  "build": {
    "appId": "xyz.robjullian.shuttle",
    "compression": "maximum",
    "asar": "true",
    "publish": [
      "github"
    ],
    "win": {
      "target": [
        "NSIS",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "icon": "./build/icon.png",
      "synopsis": "The fastest access to your favorite applications",
      "description": "The fastest access to your favorite applications",
      "category": "Network"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
